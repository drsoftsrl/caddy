{
    admin off
    log {
        output stdout
        format json
        level {$LOG_LEVEL:DEBUG}
    }
    on_demand_tls {
        ask https://ipn.dnsproxifier.com/external/sites/domain_check/
    }
    storage file_system {
        root /data/caddy
    }
}

:443 {
    tls {
        on_demand
    }

    handle /health {
        respond "OK" 200
    }

    # FIX 1: Use a clearer wildcard or explicit host
    @ipn_subdomain {
        header_regexp host Host ^ipn-aff\..*
    }

    handle @ipn_subdomain {
        reverse_proxy https://ipn.dnsproxifier.com {
            # FIX 2: Manually set the Host to the target's expected domain
            header_up Host ipn.dnsproxifier.com
            header_up X-Real-IP {remote_host}
            header_up X-Forwarded-Proto https

            transport http {
                tls
                tls_server_name ipn.dnsproxifier.com
            }
        }
    }

    @myaccount_subdomain host myaccount.*
    handle @myaccount_subdomain {
        reverse_proxy https://myaccount.dnsproxifier.com {
            header_up Host myaccount.dnsproxifier.com
            transport http {
                tls
                tls_server_name myaccount.dnsproxifier.com
            }
        }
    }

    # FIX 3: Custom fallback message for debugging
    handle {
        respond "Caddy-Error: Domain {host} did not match any handle" 404
    }

    handle_errors {
        respond "Caddy-Error-Handler: {err.status_code} {err.status_text}"
    }
}

:80 {
    redir https://{host}{uri} permanent
}